<% content_for :title, "Login" %>
<div class="login-wrapper ">
      <!-- START Login Background Pic Wrapper-->
      <div class="bg-pic">
        <!-- START Background Pic-->
        <img src="<%= image_path('demo/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg') %>" data-src="<%= image_path('demo/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg') %>" data-src-retina="<%= image_path('demo/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg') %>" alt="" class="lazy">
        <!-- END Background Pic-->
        <!-- START Background Caption-->
        <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
          <h2 class="semi-bold text-white">
					Pages make it easy to enjoy what matters the most in the life</h2>
          <p class="small">
            images Displayed are solely for representation purposes only, All work copyright of respective owner, otherwise Â© 2013-2014 REVOX.
          </p>
        </div>
        <!-- END Background Caption-->
      </div>
      <!-- END Login Background Pic Wrapper-->
      <!-- START Login Right Container-->
      <div class="login-container bg-white">
        <div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
          <img src="<%= image_path('logo.png') %>" alt="logo" data-src="<%= image_path('logo.png') %>" data-src-retina="<%= image_path('logo.png') %>" width="78" height="22">
          <p class="p-t-35">Sign into your pages account</p>
          <% if flash.key?("notice") or flash.key?("alert") %>
            <% if flash.key?("alert") %>
              <div class="alert alert-danger">
                <span>Error:</span><%= alert %>
              </div>
            <% end %>    
            <% if flash.key?("notice") %>
              <div class="alert alert-success">
                <span>Success:</span>
                <%= notice %>
              </div>
            <% end %>    
          <% end %>
          <!-- START Login Form -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), id: 'form-login', html: { class: 'p-t-15' }) do |f| %>
            
              	<%= f.input :email, required: false, label: "Login", autofocus: true, placeholder: 'Email Id'%>
           
              	<%= f.input :password, required: false, label: "Password", placeholder: 'Credentials' %>
        
            <div class="row">
              <div class="col-md-6 no-padding">
                <div class="checkbox ">
                  <%= f.input :remember_me, as: :boolean, boolean_style: :inline, label: 'Keep Me Signed in' if devise_mapping.rememberable?%>
                </div>
              </div>
              <div class="col-md-6 text-right">
                <a href="#" class="text-info small">Help? Contact Support</a>
                
              </div>
            </div>
            <!-- END Form Control-->
            <%= f.button :submit, "Sign in", class: 'btn btn-primary btn-cons m-t-10' %>
            <p></p>
            <%= render "devise/shared/links" %>
          <% end %>
          <!--END Login Form-->
          <div class="pull-bottom sm-pull-bottom">
            <div class="m-b-30 p-r-80 sm-m-t-20 sm-p-r-15 sm-p-b-20 clearfix">
              <div class="col-sm-3 col-md-2 no-padding">
                <img alt="" class="m-t-5" data-src="<%= image_path('demo/pages_icon.png') %>" data-src-retina="<%= image_path('demo/pages_icon.png') %>" height="60" src="<%= image_path('demo/pages_icon.png') %>" width="60">
              </div>
              <div class="col-sm-9 no-padding m-t-10">
                <p><small>
		        		Create a pages account. If you have a facebook account, log into it for this process. Sign in with <a href="#" class="text-info">Facebook</a> or <a href="#" class="text-info">Google</a></small>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END Login Right Container-->
    </div>


