<% content_for :title, "Register" %>
<div class="register-container full-height sm-p-t-30">
      <div class="container-sm-height full-height">
        <div class="row row-sm-height">
          <div class="col-sm-12 col-sm-height col-middle">
            <img src="<%= image_path('logo.png') %>" alt="logo" data-src="<%= image_path('logo.png') %>" data-src-retina="<%= image_path('logo.png') %>" width="78" height="22">
            <h3>Pages makes it easy to enjoy what matters the most in your life</h3>
            <p>
              <small>
        Create a pages account. If you have a facebook account, log into it for this process. Sign in with <a href="#" class="text-info">Facebook</a> or <a href="#" class="text-info">Google</a>
    </small>
            </p>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), id: 'form-register', html: {multipart: true}, html: { class: 'p-t-15' }) do |f| %>
            <%= f.error_notification %>
            
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group form-group-default">
                    <label>First Name</label>
                    <%= f.input_field :fname, required: false, label: false, autofocus: true, placeholder: 'John', class: 'form-control'%>
                    <span class="help-block"><%= @user.errors[:fname].first %></span>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group form-group-default">
                    <label>Last Names</label>
                    <%= f.input_field :lname, required: false, label: false, placeholder: 'Smith', class: 'form-control'%>
                    <span class="help-block"><%= @user.errors[:lname].first %></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group form-group-default">
                    <label>Email</label>
                    <%= f.input_field :email, required: false, label: false, placeholder: 'We will send loging details to you', class: 'form-control'%>
                    <span class="help-block"><%= @user.errors[:email].first %></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group form-group-default">
                    <label>Password</label>
                    <%= f.input_field :password, as: :password, required: false, label: false, placeholder: 'Minimum of 8 Charactors', class: 'form-control'%>
                    <span class="help-block"><%= @user.errors[:password].first %></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group form-group-default">
                    <label>Confirm Password</label>
                    <%= f.input_field :password_confirmation, as: :password, required: false, label: false, placeholder: 'Minimum of 8 Charactors', class: 'form-control'%>
                    <span class="help-block"><%= @user.errors[:password_confirmation].first %></span>
                  </div>
                </div>
              </div>
               <div class="row">
                <div class="col-sm-12">
                  <div class="form-group form-group-default">
                    <label>Upload Image*</label>
                    <%= f.file_field :image, required: true, label: false %>
                    <%= f.hidden_field :image_cache %>
                  </div>
                </div>
              </div>   
              <div class="row m-t-10">
                <div class="col-md-6">
                  <p>I agree to the <a href="#" class="text-info small">Pages Terms</a> and <a href="#" class="text-info small">Privacy</a>.</p>
                </div>
                <div class="col-md-6 text-right">
                  <a href="#" class="text-info small">Help? Contact Support</a>
                </div>
              </div>
              <%= f.button :submit, "Create a new account", class: 'btn btn-primary btn-cons m-t-10' %>
              <p></p>
              <a href="<%= new_user_session_path %>"> Sign In </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class=" full-width">
      <div class="register-container m-b-10 clearfix">
        <div class="inline pull-left">
          <img src="<%= image_path('demo/pages_icon.png') %>" alt="" class="m-t-5 " data-src="<%= image_path('demo/pages_icon.png') %>" data-src-retina="<%= image_path('demo/pages_icon.png') %>" width="60" height="60">
