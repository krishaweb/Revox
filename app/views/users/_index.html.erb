<% @row.each do |u| %>
  <tr>
    <td class="v-align-middle">
      <p><%= u.fname.titleize %> <%= u.lname.titleize if u.lname? %></p>
    </td>
    <td class="v-align-middle">
      <p><%= image_tag u.image.url(:thumb) %></p>
    </td>
    <td class="v-align-middle">
      <p><%= u.email %></p>
    </td>
    <% if can? :update, u.id %>
      <td class="v-align-middle">
        <p>
        <%= link_to "Edit", edit_user_path(u), remote: true, class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete", user_path(u), class: 'btn btn-xs btn-danger', method: :delete, 'data-confirm'=>"Are you sure?" %></p>
      </td>
    <% end %>
  </tr>
<% end %>